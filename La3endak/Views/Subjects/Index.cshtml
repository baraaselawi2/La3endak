@model IEnumerable<La3endak.Models.Subject>

@{
    ViewData["Title"] = "Subjects";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="container-fluid cyber-container">
    <h1 class="cyber-title">@ViewData["Title"]</h1>

    <div class="row mb-4">
        <div class="col">
            <a asp-action="Create" class="btn-cyber">
                <span>CREATE SUBJECT</span>
            </a>
        </div>
    </div>

    <div class="row gy-4">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="cyber-card">
                    <div class="image-container">
                        @if (!string.IsNullOrEmpty(item.SubjectImage))
                        {
                            <img src="@Url.Content("~/img/" + item.SubjectImage)" class="cyber-image" alt="@item.SubjectName" />
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/300x180" class="cyber-image" alt="No Image" />
                        }
                        <div class="scanline"></div>
                    </div>
                    <div class="cyber-content">
                        <h3 class="subject-name">@item.SubjectName</h3>
                       

                        <div class="actions">
                            <a asp-action="Edit" asp-route-id="@item.SubjectId" class="btn-cyber-sm">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.SubjectId" class="btn-cyber-sm">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.SubjectId" class="btn-cyber-sm danger">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Base Styling */
    .cyber-container {
        background: #0a0a12;
        padding: 2rem;
        min-height: 100vh;
        font-family: 'Orbitron', sans-serif;
    }

    .cyber-title {
        color: #0ff;
        text-align: center;
        text-shadow: 0 0 15px #0ff;
        margin-bottom: 2rem;
    }

    /* Cyber Card */
    .cyber-card {
        background: rgba(16, 16, 32, 0.9);
        border: 2px solid #0ff;
        border-radius: 10px;
        padding: 1rem;
        position: relative;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 255, 255, 0.2);
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    /* Image Container */
    .image-container {
        position: relative;
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 1rem;
    }

    .cyber-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    /* Scanline Animation */
    .scanline {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient( to bottom, transparent 50%, rgba(0, 255, 255, 0.1) 51%, transparent 52% );
        animation: scan 3s linear infinite;
    }

     .scan {
        0% {
            transform: translateY(-100%);
        }

        100% {
            transform: translateY(100%);
        }
    }

    /* Content Styling */
    .cyber-content {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .subject-name {
        color: #0ff;
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .subject-code {
        color: #8af;
        font-size: 1rem;
        margin-bottom: 1rem;
    }

    /* Stats Section */
    .cyber-stats {
        max-height: 150px;
        overflow-y: auto;
        padding-right: 0.5rem;
        margin-bottom: 1rem;
        flex: 1;
    }

    .cyber-stats p {
        margin: 0.5rem 0;
        font-size: 0.9rem;
        color: #8af;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .cyber-stats i {
        margin-right: 0.5rem;
        color: #0ff;
    }

    /* Buttons */
    .btn-cyber {
        background: transparent;
        border: 2px solid #0ff;
        color: #0ff;
        padding: 0.75rem 2rem;
        font-family: 'Orbitron', sans-serif;
        position: relative;
        overflow: hidden;
        transition: 0.3s;
    }

    .btn-cyber:hover {
        background: #0ff;
        color: #000;
        box-shadow: 0 0 20px #0ff;
    }

    .btn-cyber-sm {
        border: 1px solid #0ff;
        color: #0ff;
        padding: 0.5rem;
        margin: 0 0.25rem;
        border-radius: 5px;
        transition: 0.3s;
    }

    .btn-cyber-sm:hover {
        background: #0ff;
        color: #000;
    }

    .danger {
        border-color: magenta;
        color: magenta;
    }

    .danger:hover {
        background: magenta;
        color: #000;
    }

    /* Scrollbar Styling */
    ::-webkit-scrollbar {
        width: 8px;
    }

    ::-webkit-scrollbar-track {
        background: rgba(0, 0, 0, 0.3);
    }

    ::-webkit-scrollbar-thumb {
        background: #0ff;
        border-radius: 4px;
    }
</style>