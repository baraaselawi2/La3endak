@{
    ViewData["Title"] = "Our Services";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .le-services-container {
        padding: 4rem 5%;
        background: var(--light-blue);
    }

    .le-services-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .le-services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .le-service-card {
        background: white;
        border-radius: 0.75rem;
        padding: 2rem;
        text-align: center;
        transition: transform 0.3s ease;
        box-shadow: 0 4px 6px rgba(0,0,0,0.05);
        border: 1px solid var(--light-blue);
        min-height: 300px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

        .le-service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(42,92,130,0.1);
        }

    .le-service-icon {
        width: 80px;
        height: 80px;
        object-fit: contain;
        margin-bottom: 1.5rem;
        padding: 1rem;
        background: var(--light-blue);
        border-radius: 50%;
    }

    .le-service-title {
        color: var(--dark-blue);
        font-family: 'Playfair Display', serif;
        font-size: 1.25rem;
        margin-bottom: 1rem;
    }

    .le-service-description {
        color: var(--text-dark);
        line-height: 1.6;
        font-size: 0.95rem;
    }

    @@media (max-width: 768px) {
        .le-services-grid {
            grid-template-columns: 1fr;
            padding: 0 1rem;
        }

        .le-service-card {
            min-height: 250px;
            padding: 1.5rem;
        }
    }
</style>

