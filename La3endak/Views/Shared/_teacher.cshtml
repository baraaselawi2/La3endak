<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - La3endak</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow-lg" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); z-index: 1000;">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "TeacherDashboard")">
                <i class="fas fa-book-open me-2"></i>
                <span class="fw-bold">La3endak</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item mx-2">
                        <a class="nav-link active" href="@Url.Action("Index", "TeacherDashboard")">
                            <i class="fas fa-home me-1"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link" href="@Url.Action("Profile", "TeacherDashboard")">
                            <i class="fas fa-user me-1"></i> Profile
                        </a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="nav-link" href="@Url.Action("Notifications", "TeacherDashboard")">
                            <i class="fas fa-bell me-1"></i>
                            <span class="badge bg-danger">3</span>
                        </a>
                    </li>
                    <li class="nav-item mx-2">
                        <form asp-controller="LogReg" asp-action="Logout" method="post">
                            <button type="submit" class="btn cyber-logout-btn">
                                <i class="fas fa-sign-out-alt me-2"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mt-5 pt-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-primary text-white mt-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="container py-5">
            <div class="row g-4">
                <div class="col-md-4">
                    <h5 class="text-white mb-4"><i class="fas fa-book-open me-2"></i>La3endak</h5>
                    <p class="text-white-50">Connecting students with expert tutors for personalized learning experiences.</p>
                </div>
                <div class="col-md-4">
                    <h5 class="text-white mb-4">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "TeacherDashboard")" class="text-white-50 text-decoration-none">Dashboard</a></li>
                        <li class="mb-2"><a href="@Url.Action("Profile", "TeacherDashboard")" class="text-white-50 text-decoration-none">Profile</a></li>
                        <li><a href="@Url.Action("Notifications", "TeacherDashboard")" class="text-white-50 text-decoration-none">Notifications</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="text-white mb-4">Contact Info</h5>
                    <ul class="list-unstyled text-white-50">
                        <li class="mb-2"><i class="fas fa-map-marker-alt me-2"></i>Amman, Jordan</li>
                        <li class="mb-2"><i class="fas fa-phone me-2"></i>+962 7 9000 0000</li>
                        <li><i class="fas fa-envelope me-2"></i>support@La3endak.com</li>
                    </ul>
                </div>
            </div>

            <hr class="my-4">

            <div class="row">
                <div class="col-12 text-center">
                    <p class="mb-0 text-white-50 small">
                        © 2025 La3endak. All rights reserved.
                        <a href="#" class="text-white-50 text-decoration-none ms-2">Privacy Policy</a>
                        <a href="#" class="text-white-50 text-decoration-none ms-2">Terms of Service</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>