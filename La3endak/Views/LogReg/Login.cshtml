@model La3endak.Models.UserAccount
@{
    ViewData["Title"] = "ScholarMind Portal";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ScholarMind - Digital Campus</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --gradient-1: linear-gradient(135deg, #6366f1 0%, #a855f7 50%, #ec4899 100%);
            --surface-1: rgba(255, 255, 255, 0.1);
            --text-primary: #1f2937;
            --text-secondary: #4b5563;
            --accent-1: #3b82f6;
            --accent-2: #10b981;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            background: var(--gradient-1);
            font-family: 'Inter', sans-serif;
            display: grid;
            place-items: center;
            color: var(--text-primary);
        }

        .glass-panel {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(16px);
            border-radius: 24px;
            padding: 3rem;
            width: 100%;
            max-width: 480px;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
            margin: 1rem;
            transform-style: preserve-3d;
        }

        .header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .logo {
            width: 64px;
            height: 64px;
            background: var(--gradient-1);
            border-radius: 16px;
            margin: 0 auto 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

            .logo i {
                color: white;
                font-size: 1.75rem;
            }

        h1 {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            background: var(--gradient-1);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .input-field {
            width: 100%;
            padding: 1rem;
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .input-field:focus {
                outline: none;
                border-color: var(--accent-1);
                box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
            }

            .input-field::placeholder {
                color: #9ca3af;
            }

        .password-toggle {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: var(--text-secondary);
        }

        .submit-btn {
            width: 100%;
            padding: 1rem;
            background: var(--gradient-1);
            border: none;
            border-radius: 12px;
            color: white;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.75rem;
        }

            .submit-btn:hover {
                transform: translateY(-2px);
            }

        .alt-auth {
            margin-top: 2rem;
            text-align: center;
        }

        .divider {
            margin: 1.5rem 0;
            display: flex;
            align-items: center;
            gap: 1rem;
            color: var(--text-secondary);
        }

            .divider::before,
            .divider::after {
                content: '';
                flex: 1;
                height: 1px;
                background: #e5e7eb;
            }

        .links {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .link {
            color: var(--text-secondary);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s ease;
        }

            .link:hover {
                color: var(--accent-1);
            }

        .text-danger {
            color: #ef4444;
            font-size: 0.875rem;
            margin-top: 0.5rem;
            display: block;
        }

        @@media (max-width: 480px) {
            .glass-panel {
                padding: 2rem;
                border-radius: 16px;
            }

            h1 {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="glass-panel">
        <div class="header">
            <div class="logo">
                <i class="bi bi-mortarboard"></i>
            </div>
            <h1>La3endak Portal</h1>
            <p class="text-secondary">Enter your academic credentials</p>
        </div>

        <form asp-action="Login" method="post">
            <div class="form-group">
                <input asp-for="Email" class="input-field" placeholder="Institutional email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" type="password" class="input-field" placeholder="Password" id="password">
                <i class="bi bi-eye-slash password-toggle" onclick="togglePassword()"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="submit-btn">
                <i class="bi bi-arrow-right"></i>
                Access Portal
            </button>

            <div class="divider">or continue with</div>

            <div class="alt-auth">
                <button type="button" class="input-field bg-white">
                    <i class="bi bi-microsoft"></i> Office 365
                </button>
            </div>

            <div class="links">
                <a href="/LogReg/Register" class="link">Create account</a>
                <a href="/Home/Contact" class="link">Forgot password?</a>
            </div>
        </form>
    </div>

    <script>
        function togglePassword() {
            const passwordField = document.getElementById('password');
            const toggleIcon = document.querySelector('.password-toggle');

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleIcon.classList.replace('bi-eye-slash', 'bi-eye');
            } else {
                passwordField.type = 'password';
                toggleIcon.classList.replace('bi-eye', 'bi-eye-slash');
            }
        }
    </script>
</body>
</html>